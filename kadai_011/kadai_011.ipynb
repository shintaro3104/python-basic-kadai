      "source": [
        "def add_tax(price, tax_rate):\n",
        "    #消費税10%の時はtax_rate = 10として計算する数式。\n",
        "    total = price * (1 +tax_rate / 100)\n",
        "    return total\n",
        "\n",
        "price = 300\n",
        "tax_rate = 10\n",
        "\n",
        "print(f\"合計{int(add_tax(price,tax_rate))}円です（商品{price}円、消費税{tax_rate}%）\")"
